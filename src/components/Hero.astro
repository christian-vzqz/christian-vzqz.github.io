<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 120px 0 80px;
    position: relative;
    overflow: hidden;
  }

  .hero-bg-glow {
    position: absolute;
    top: -50%;
    left: 50%;
    transform: translateX(-50%);
    width: 150%;
    height: 100%;
    background: radial-gradient(ellipse at center, rgba(99, 102, 241, 0.12) 0%, transparent 60%);
    pointer-events: none;
    z-index: -1;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    margin-bottom: 60px;
  }

  .hero-text {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .badge {
    align-self: flex-start;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    letter-spacing: -0.03em;
    line-height: 1.1;
    background: linear-gradient(135deg, #fff 0%, #a0a0b0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-role {
    font-size: clamp(1.5rem, 3vw, 2.25rem);
    font-weight: 600;
    color: var(--accent-primary);
    letter-spacing: -0.02em;
  }

  .hero-description {
    font-size: 1.15rem;
    color: var(--text-secondary);
    line-height: 1.7;
    max-width: 500px;
  }

  .hero-tech {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 12px;
  }

  .tech-tag {
    color: var(--text-primary);
    font-weight: 500;
    font-size: 0.95rem;
  }

  .tech-divider {
    color: var(--text-muted);
  }

  .hero-cta {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    margin-top: 12px;
  }

  .hero-terminal {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* Stats */
  .hero-stats {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 40px;
    padding: 32px 40px;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 16px;
    backdrop-filter: blur(20px);
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    text-align: center;
  }

  .stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  .stat-label {
    font-size: 0.85rem;
    color: var(--text-muted);
    font-weight: 500;
  }

  .stat-divider {
    width: 1px;
    height: 40px;
    background: var(--border-color);
  }

  /* Animations */
  .animate-fade-in {
    opacity: 0;
    animation: fadeIn 0.8s ease forwards;
  }

  .animate-fade-in-up {
    opacity: 0;
    animation: fadeInUp 0.8s ease forwards;
  }

  @keyframes fadeIn {
    to { opacity: 1; }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .hero-content {
      grid-template-columns: 1fr;
      gap: 48px;
    }

    .hero-text {
      text-align: center;
      align-items: center;
    }

    .hero-description {
      max-width: 600px;
    }

    .hero-cta {
      justify-content: center;
    }

    .hero-stats {
      flex-wrap: wrap;
      gap: 24px;
    }

    .stat-divider {
      display: none;
    }
  }

  @media (max-width: 640px) {
    .hero {
      padding: 100px 0 60px;
    }

    .hero-stats {
      padding: 24px;
      gap: 20px;
    }

    .stat-value {
      font-size: 1.25rem;
    }

    .hero-cta {
      flex-direction: column;
      width: 100%;
    }

    .hero-cta .btn {
      width: 100%;
    }
  }
</style>
