---
const projects = [
  {
    title: 'Real-time Telemetry Platform',
    description: 'Production platform for real-time data collection, processing, and visualization of telemetry data from distributed systems. Powered by a custom-built PubSub broker.',
    stack: ['React', 'Node.js', 'WebSockets', 'Custom PubSub (.NET 8)'],
    icon: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 12h-4l-3 9L9 3l-3 9H2"/></svg>`,
    status: 'production',
    link: null
  },
  {
    title: 'Event-driven Data Processing',
    description: 'High-throughput event processing system handling thousands of events per second with guaranteed delivery and fault tolerance. Built on a custom PubSub broker service.',
    stack: ['Node.js', 'Redis', 'Custom PubSub (.NET 8)'],
    icon: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/></svg>`,
    status: 'production',
    link: null
  },
  {
    title: 'High-performance .NET Services',
    description: 'Microservices architecture delivering low-latency APIs with optimized database access and caching strategies.',
    stack: ['.NET 8', 'C#'],
    icon: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><line x1="3" y1="9" x2="21" y2="9"/><line x1="9" y1="21" x2="9" y2="9"/></svg>`,
    status: 'production',
    link: null
  }
];
---

<section class="projects" id="projects">
  <div class="container">
    <div class="section-title" data-animate>
      <h2>Featured Projects</h2>
      <p>A selection of projects I've built and contributed to</p>
    </div>

    <div class="projects-grid">
      {projects.map((project, index) => (
        <div class="project-card" data-animate style={`--delay: ${index * 0.1}s`}>
          <div class="card-header">
            <div class="project-icon" set:html={project.icon} />
            <span class={`status-badge ${project.status}`}>
              {project.status === 'production' ? 'In Production' : 'Coming Soon'}
            </span>
          </div>

          <h3>{project.title}</h3>
          <p class="project-description">{project.description}</p>

          <div class="project-stack">
            {project.stack.map(tech => (
              <span class="stack-tag">{tech}</span>
            ))}
          </div>

          <div class="card-footer">
            {project.link ? (
              <a href={project.link} target="_blank" rel="noopener noreferrer" class="project-link">
                <span>View on GitHub</span>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="7" y1="17" x2="17" y2="7"/>
                  <polyline points="7 7 17 7 17 17"/>
                </svg>
              </a>
            ) : (
              <span class="project-link disabled">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                  <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                </svg>
                <span>Private Project</span>
              </span>
            )}
          </div>

          <!-- Decorative gradient -->
          <div class="card-glow"></div>
        </div>
      ))}
    </div>

    <!-- GitHub CTA -->
    <div class="github-cta" data-animate>
      <div class="cta-content">
        <div class="cta-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </div>
        <div class="cta-text">
          <h3>More on GitHub</h3>
          <p>Check out my open source contributions and personal projects</p>
        </div>
      </div>
      <a href="https://github.com/christian-vzqz" target="_blank" rel="noopener noreferrer" class="btn btn-secondary">
        View GitHub Profile
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="7" y1="17" x2="17" y2="7"/>
          <polyline points="7 7 17 7 17 17"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .projects {
    background: var(--bg-secondary);
    position: relative;
  }

  .projects::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--border-color), transparent);
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    margin-bottom: 60px;
  }

  .project-card {
    position: relative;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 20px;
    padding: 32px;
    backdrop-filter: blur(20px);
    display: flex;
    flex-direction: column;
    transition: all var(--transition-base);
    overflow: hidden;
    opacity: 0;
    transform: translateY(20px);
  }

  .project-card.visible {
    opacity: 1;
    transform: translateY(0);
    transition-delay: var(--delay);
  }

  .project-card:hover {
    border-color: var(--border-glow);
    transform: translateY(-6px);
    box-shadow: var(--shadow-lg);
  }

  .project-card:hover .card-glow {
    opacity: 1;
  }

  .card-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 150px;
    background: linear-gradient(to bottom, rgba(99, 102, 241, 0.08) 0%, transparent 100%);
    opacity: 0;
    transition: opacity var(--transition-base);
    pointer-events: none;
  }

  .card-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-bottom: 20px;
  }

  .project-icon {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--accent-gradient);
    border-radius: 14px;
    box-shadow: 0 0 30px rgba(99, 102, 241, 0.3);
  }

  .project-icon :global(svg) {
    stroke: white;
  }

  .status-badge {
    padding: 6px 12px;
    border-radius: 100px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .status-badge.production {
    background: rgba(16, 185, 129, 0.15);
    color: var(--success);
    border: 1px solid rgba(16, 185, 129, 0.3);
  }

  .status-badge.coming {
    background: rgba(251, 191, 36, 0.15);
    color: #fbbf24;
    border: 1px solid rgba(251, 191, 36, 0.3);
  }

  .project-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 12px;
    color: var(--text-primary);
  }

  .project-description {
    color: var(--text-secondary);
    font-size: 0.95rem;
    line-height: 1.7;
    margin-bottom: 20px;
    flex-grow: 1;
  }

  .project-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 24px;
  }

  .stack-tag {
    padding: 6px 12px;
    background: var(--bg-tertiary);
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--text-muted);
  }

  .card-footer {
    padding-top: 20px;
    border-top: 1px solid var(--border-color);
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--accent-primary);
    font-size: 0.9rem;
    font-weight: 500;
    transition: all var(--transition-fast);
  }

  .project-link:hover:not(.disabled) {
    gap: 12px;
  }

  .project-link.disabled {
    color: var(--text-muted);
    cursor: default;
  }

  /* GitHub CTA */
  .github-cta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 24px;
    padding: 32px 40px;
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 20px;
    backdrop-filter: blur(20px);
  }

  .cta-content {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .cta-icon {
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-tertiary);
    border-radius: 16px;
    color: var(--text-primary);
  }

  .cta-text h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 4px;
  }

  .cta-text p {
    color: var(--text-muted);
    font-size: 0.95rem;
  }

  @media (max-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }

    .github-cta {
      flex-direction: column;
      text-align: center;
      padding: 28px;
    }

    .cta-content {
      flex-direction: column;
    }
  }
</style>
